################################################################
# Manage amm deployment through Crypto Infrastructure as Code
################################################################

addon "svm" {
    rpc_api_url = input.rpc_api_url
    network_id = input.network_id
}

action "deploy_amm" "svm::deploy_program" {
    description = "Deploy amm program"
    program = svm::get_program_from_anchor_project("amm") 
    authority = signer.authority
    payer = signer.payer
}
